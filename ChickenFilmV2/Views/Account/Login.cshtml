@model ChickenFilmV2.ViewModels.LoginViewModel

@{
    Layout = null;
    ViewData["Title"] = "Đăng Nhập";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/Login.css" />
</head>
<body>
    <div class="container">
        <!-- Cột bên trái -->
        <div class="left-side">
            <img src="~/Images/Logo.png" alt="Logo" class="logo" />
            <h2>SIX CHICKEN'S FILMS</h2>
        </div>

        <!-- Cột bên phải -->
        <div class="right-side">
            <h2>Đăng Nhập</h2>

            @* Hiển thị lỗi nếu có *@
            @if (ViewBag.Error != null)
            {
                <div class="error-message">@ViewBag.Error</div>
            }

            <form asp-action="Login" method="post">
                <label for="email">Tài khoản Email</label>
                <input asp-for="Email" type="email" id="email" placeholder="Nhập email" required />
                <span asp-validation-for="Email" class="text-danger"></span>

                <label for="password">Mật khẩu</label>
                <input asp-for="Password" type="password" id="password" placeholder="Nhập mật khẩu" required />
                <span asp-validation-for="Password" class="text-danger"></span>

                <div style="margin-bottom: 10px;">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div style="color: red; font-size: 13px; font-style: italic;">@error.ErrorMessage</div>
                    }
                </div>

                <button type="submit">Đăng nhập</button>

                <a href="/Account/ForgotPassword" class="forgot-password">Quên mật khẩu?</a>

                <div class="divider"><span>Hoặc</span></div>

                <button type="button" class="google-login">Đăng nhập bằng Google</button>
            </form>
        </div>
    </div>

    @* Scripts để hiện validation *@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
