@model ChickenFilmV2.ViewModels.RegisterViewModel

@{
    Layout = null;
    ViewData["Title"] = "Đăng Ký";
}

<link rel="stylesheet" href="~/css/Register.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>

<div class="container">
    <div class="left-side">
        <img src="~/Images/Logo.png" alt="Logo" class="logo" />
        <h2>SIX CHICKEN'S FILMS</h2>
    </div>

    <div class="right-side">
        <h2>Đăng Ký</h2>
        <form asp-action="Register" method="post">
            <div asp-validation-summary="All" class="text-danger"></div> <!-- Hiển thị lỗi tổng hợp nếu có -->

            <label for="fullname">Họ Tên</label>
            <input asp-for="FullName" type="text" id="fullname" placeholder="Nhập họ tên" required />
            <span asp-validation-for="FullName" class="text-danger"></span>

            <label for="username">Username</label>
            <input asp-for="Username" type="text" id="username" placeholder="Nhập username" required />
            <span asp-validation-for="Username" class="text-danger"></span>

            <label for="email">Email</label>
            <input asp-for="Email" type="email" id="email" placeholder="Nhập email" required />
            <span asp-validation-for="Email" class="text-danger"></span>

            <label for="dob">Ngày sinh</label>
            <input asp-for="Birthday" type="date" id="dob" required />
            <span asp-validation-for="Birthday" class="text-danger"></span>

            <label for="gender">Giới tính</label>
            <select asp-for="Gender" id="gender" required>
                <option value="true">Nam</option>
                <option value="false">Nữ</option>
            </select>

            <span asp-validation-for="Gender" class="text-danger"></span>

            <label for="password">Mật khẩu</label>
            <input asp-for="Password" type="password" id="password" placeholder="Nhập mật khẩu" required />
            <span asp-validation-for="Password" class="text-danger"></span>

            <label for="confirm-password">Xác nhận mật khẩu</label>
            <input asp-for="ConfirmPassword" type="password" id="confirm-password" placeholder="Nhập lại mật khẩu" required />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

            <label for="phone-number">Số điện thoại</label>
            <input asp-for="PhoneNumber" type="text" id="phone-number" placeholder="Nhập số điện thoại" required />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>

            <label for="address">Địa chỉ</label>
            <input asp-for="Address" type="text" id="address" placeholder="Nhập địa chỉ" />
            <span asp-validation-for="Address" class="text-danger"></span>

            <button type="submit">Đăng ký</button>
        </form>
    </div>
</div>
